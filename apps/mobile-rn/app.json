{
  "expo": {
    "name": "CyntientOps",
    "slug": "cyntientops-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0a0a0a"
    },
    "assetBundlePatterns": [
      "assets/images/icon.png",
      "assets/images/splash.png",
      "assets/images/AIAssistant.png",
      "assets/images/adaptive-icon.png",
      "assets/images/notification-icon.png",
      "assets/fonts/**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.cyntientops.mobile",
      "buildNumber": "1",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "CyntientOps needs location access to provide building-specific services and route optimization.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "CyntientOps needs location access to provide building-specific services and route optimization.",
        "NSCameraUsageDescription": "CyntientOps needs camera access to capture photo evidence for task completion and compliance documentation.",
        "NSPhotoLibraryUsageDescription": "CyntientOps needs photo library access to select and upload images for task documentation.",
        "NSMicrophoneUsageDescription": "CyntientOps needs microphone access for Nova AI voice interactions and emergency communication.",
        "NSFaceIDUsageDescription": "CyntientOps uses Face ID for secure authentication and biometric login.",
        "NSTouchIDUsageDescription": "CyntientOps uses Touch ID for secure authentication and biometric login.",
        "NSContactsUsageDescription": "CyntientOps needs contacts access to manage building contacts and emergency contacts.",
        "NSBluetoothAlwaysUsageDescription": "CyntientOps uses Bluetooth for device connectivity and proximity-based features.",
        "NSBluetoothPeripheralUsageDescription": "CyntientOps uses Bluetooth for device connectivity and proximity-based features.",
        "NSMotionUsageDescription": "CyntientOps uses motion sensors for Nova AI gesture recognition and device orientation.",
        "UIBackgroundModes": [
          "background-fetch",
          "background-processing",
          "remote-notification",
          "location"
        ],
        "ITSAppUsesNonExemptEncryption": false,
        "CFBundleURLTypes": [
          {
            "CFBundleURLName": "cyntientops",
            "CFBundleURLSchemes": [
              "cyntientops"
            ]
          }
        ],
        "LSApplicationQueriesSchemes": [
          "tel",
          "mailto",
          "maps",
          "comgooglemaps",
          "uber",
          "lyft"
        ],
        "NSUserActivityTypes": [
          "com.cyntientops.task",
          "com.cyntientops.building",
          "com.cyntientops.emergency"
        ],
        "WKAppBoundDomains": [
          "data.cityofnewyork.us",
          "api.weather.gov",
          "secure.cyntientops.com"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#0a0a0a"
      },
      "package": "com.cyntientops.mobile",
      "versionCode": 1,
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.ACCESS_WIFI_STATE",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.READ_PHONE_STATE",
        "android.permission.VIBRATE",
        "android.permission.WAKE_LOCK",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.BLUETOOTH",
        "android.permission.BLUETOOTH_ADMIN",
        "android.permission.ACCESS_BACKGROUND_LOCATION",
        "android.permission.SYSTEM_ALERT_WINDOW",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT",
        "android.permission.USE_FACE",
        "android.permission.READ_CONTACTS",
        "android.permission.WRITE_CONTACTS",
        "android.permission.CALL_PHONE",
        "android.permission.SEND_SMS",
        "android.permission.READ_SMS",
        "android.permission.RECEIVE_SMS",
        "android.permission.READ_CALENDAR",
        "android.permission.WRITE_CALENDAR",
        "android.permission.ACCESS_NOTIFICATION_POLICY",
        "android.permission.POST_NOTIFICATIONS"
      ],
      "intentFilters": [
        {
          "action": "android.intent.action.VIEW",
          "category": [
            "android.intent.category.DEFAULT",
            "android.intent.category.BROWSABLE"
          ],
          "data": {
            "scheme": "cyntientops"
          }
        },
        {
          "action": "android.intent.action.VIEW",
          "category": [
            "android.intent.category.DEFAULT",
            "android.intent.category.BROWSABLE"
          ],
          "data": {
            "scheme": "https",
            "host": "cyntientops.com"
          }
        }
      ]
    },
    "web": {
      "favicon": "./assets/images/favicon.png",
      "bundler": "metro"
    },
    "jsEngine": "hermes",
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "CyntientOps needs location access to provide building-specific services and route optimization."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "CyntientOps needs camera access to capture photo evidence for task completion and compliance documentation."
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "CyntientOps needs photo library access to select and upload images for task documentation.",
          "savePhotosPermission": "CyntientOps needs permission to save photos to your photo library.",
          "isAccessMediaLocationEnabled": true
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "CyntientOps needs microphone access for Nova AI voice interactions and emergency communication."
        }
      ],
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "CyntientOps uses Face ID for secure authentication and biometric login."
        }
      ],
      [
        "expo-contacts",
        {
          "contactsPermission": "CyntientOps needs contacts access to manage building contacts and emergency contacts."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png",
          "color": "#ffffff",
          "defaultChannel": "default"
        }
      ],
      [
        "expo-background-fetch",
        {
          "backgroundFetchPermission": "CyntientOps needs background fetch permission to sync data and receive updates."
        }
      ],
      [
        "expo-task-manager",
        {
          "backgroundLocationPermission": "CyntientOps needs background location permission to track worker locations and provide location-based services."
        }
      ],
      [
        "expo-build-properties",
        {
          "ios": {
            "deploymentTarget": "15.1"
          },
          "android": {
            "minSdkVersion": 23,
            "compileSdkVersion": 34,
            "targetSdkVersion": 34
          }
        }
      ],
      "expo-asset",
      "expo-secure-store"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "newArchEnabled": true,
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "e59805da-6423-4c79-ba1a-d277633f0875"
      },
      "supabase": {
        "url": "https://your-supabase-project.supabase.co",
        "anonKey": "your-supabase-anon-key",
        "serviceRoleKey": "your-supabase-service-role-key"
      },
      "apiKeys": {
        "weatherApiKey": "your-weather-api-key",
        "dsnyApiKey": "your-dsny-api-key",
        "hpdApiKey": "your-hpd-api-key",
        "dobApiKey": "your-dob-api-key"
      },
      "websocketUrl": "wss://your-websocket-url.com",
      "databasePath": "cyntientops.db"
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/e59805da-6423-4c79-ba1a-d277633f0875"
    }
  }
}
