{
  "name": "mobile-rn",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/mobile-rn",
  "projectType": "application",
  "targets": {
    "start": {
      "executor": "@nx/react-native:start",
      "options": {
        "port": 8081
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/apps/mobile-rn"],
      "options": {
        "command": "npx expo export --platform ios --output-dir ../../dist/apps/mobile-rn",
        "cwd": "apps/mobile-rn"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/mobile-rn/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/mobile-rn/**/*.{ts,tsx,js,jsx}"]
      }
    }
  },
  "tags": ["scope:mobile", "type:app"],
  "implicitDependencies": [
    "business-core",
    "api-clients", 
    "database",
    "domain-schema",
    "ui-components",
    "design-tokens"
  ]
}
