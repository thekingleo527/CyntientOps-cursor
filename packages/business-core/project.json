{
  "name": "business-core",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/business-core/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/business-core",
        "main": "packages/business-core/src/index.ts",
        "tsConfig": "packages/business-core/tsconfig.lib.json",
        "assets": ["packages/business-core/*.md"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/business-core/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/business-core/**/*.{ts,tsx,js,jsx}"]
      }
    }
  },
  "tags": ["scope:core", "type:lib"]
}
