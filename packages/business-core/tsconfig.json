{
  "extends": "../../config/tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noEmit": false,
    "types": []
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "../api-clients/**/*",
    "../managers/**/*",
    "../ui-components/**/*",
    "../database/**/*",
    "../domain-schema/**/*",
    "../intelligence-services/**/*",
    "../offline-support/**/*",
    "../realtime-sync/**/*",
    "../command-chains/**/*",
    "../design-tokens/**/*",
    "../testing/**/*",
    "../data-seed/**/*"
  ]
}