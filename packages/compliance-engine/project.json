{
  "name": "compliance-engine",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/compliance-engine/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/packages/compliance-engine"],
      "options": {
        "command": "tsc",
        "cwd": "packages/compliance-engine"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/compliance-engine/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/compliance-engine/**/*.{ts,tsx,js,jsx}"]
      }
    }
  },
  "tags": ["scope:compliance", "type:lib"]
}
