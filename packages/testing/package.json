{
  "name": "@cyntientops/testing",
  "version": "1.0.0",
  "description": "Testing utilities and end-to-end test suite for CyntientOps",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:e2e": "jest --config jest.e2e.config.js",
    "test:integration": "jest --config jest.integration.config.js",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix"
  },
  "dependencies": {
    "jest": "^29.7.0",
    "@testing-library/react-native": "^12.4.0",
    "@testing-library/jest-native": "^5.4.3",
    "detox": "^20.14.0",
    "msw": "^2.0.0",
    "supertest": "^6.3.3",
    "zod": "^3.22.4",
    "@cyntientops/domain-schema": "1.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.16",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "testing",
    "e2e",
    "integration",
    "cyntientops"
  ],
  "author": "CyntientOps Team",
  "license": "MIT"
}
